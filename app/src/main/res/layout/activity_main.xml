<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top Image -->
    <ImageView
        android:id="@+id/topImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:scaleType="center"
        android:src="@drawable/top_bg" />

    <!-- FrameLayout to hold the bottom image and buttons together -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Bottom Image -->
        <ImageView
            android:id="@+id/bottomImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/bottom_bg" />

        <!-- Button Container -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center">

            <!-- Navigation Button -->
            <ImageButton
                android:id="@+id/navButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@drawable/neon_button_background"
                android:scaleType="centerInside"
                android:src="@drawable/nav"
                android:padding="20dp"
                android:onClick="openNavActivity" />

            <!-- Music Button -->
            <ImageButton
                android:id="@+id/musicButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@drawable/neon_button_background"
                android:scaleType="fitXY"
                android:src="@drawable/music"
                android:padding="20dp"
                android:onClick="openMusicActivity" />

            <!-- Radio Button -->
            <ImageButton
                android:id="@+id/radioButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@drawable/neon_button_background"
                android:scaleType="fitXY"
                android:src="@drawable/radio"
                android:padding="20dp"
                android:onClick="openRadioActivity" />

            <!-- Phone Calls Button -->
            <ImageButton
                android:id="@+id/phoneButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@drawable/neon_button_background"
                android:scaleType="fitXY"
                android:src="@drawable/phone"
                android:padding="20dp"
                android:onClick="openPhoneActivity" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>
