<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Neon outline glow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent fill to ensure only the outline is visible -->
            <stroke
                android:width="4dp"
                android:color="#29BEB6" /> <!-- Neon blue outline color -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Button background with reduced opacity -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Solid black background with 50% opacity -->
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>
